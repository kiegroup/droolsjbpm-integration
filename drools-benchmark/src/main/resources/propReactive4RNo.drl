declare A
  a1 : int
  a2 : int
  a3 : int
  a4 : int
  a5 : int
end

declare B
  b1 : int
  b2 : int
end

rule Init salience 100
when
then
    for (int i = 0; i < 1000000; i++) {
        insert( new A(1, 1, 1, 1, 1) );
    }
    insert( new B(0, 2) );
end

rule R1
when
    $a: A( a1 < 11 )
    $b: B( b2 > $a.a2, b1 < $a.a1 )
then
    modify( $a ) { setA2( $b.getB2() + 1 ) };
end

rule R2
when
    $a: A( a1 < 12 )
    $b: B( b2 > $a.a3, b1 < $a.a1 )
then
    modify( $a ) { setA3( $b.getB2() + 1 ) };
end

rule R3
when
    $a: A( a1 < 13 )
    $b: B( b2 > $a.a4, b1 < $a.a1 )
then
    modify( $a ) { setA4( $b.getB2() + 1 ) };
end

rule R4
when
    $a: A( a1 < 14 )
    $b: B( b2 > $a.a5, b1 < $a.a1 )
then
    modify( $a ) { setA5( $b.getB2() + 1 ) };
end
