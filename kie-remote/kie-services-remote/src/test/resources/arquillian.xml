<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

  <container qualifier="jboss" default="true">
    <configuration>
      <property name="jbossHome">target/${jboss.server.name}</property>
      <property name="allowConnectingToRunningServer">false</property>
      <property name="serverConfig">${jboss.server.config.file.name:standalone-full.xml}</property>
    </configuration>
  </container>

</arquillian>